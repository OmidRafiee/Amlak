
@model Calabin.Core.ViewModel.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
    Layout = "_Layout";
}


<div class="container">

    <div class="col-md-6 col-md-offset-3">


        <form asp-controller="Account" asp-action="EmailTest" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="register border--bottom--radius">

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" dir="ltr" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-default">ارسال ایمیل</button>


        </form>
    </div>

</div>


