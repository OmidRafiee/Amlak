<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            @if (!string.IsNullOrEmpty(ViewBag.FailMessage))
    {
        <div class="alert alert-danger fade in" style="margin-top: 10px">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            @ViewBag.FailMessage
        </div>
}

            @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success fade in" style="margin-top: 10px">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            @ViewBag.Message
        </div>
}
            <div class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="~/image/img-01.png" alt="IMG">
            </div>

            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login border--bottom--radius">
                <span class="login100-form-title">
                    ورود به سایت
                </span>

                <div class="wrap-input100 validate-input">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <input asp-for="PhoneNumber" class="input100" type="number" placeholder="موبایل">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                    <i class="fa fa-mobile" aria-hidden="true"></i>
                </span>
                </div>

                <div class="wrap-input100 validate-input">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="input100" type="password" placeholder="گذرواژه">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        ورود
                    </button>
                </div>

                <div class="wrap-input100 p-t-12">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        رمز عبور خود را فراموش کرده اید؟
                    </span>
                    <a asp-action="ForgotPassword" class="txt2"> بازیابی کلمه عبور</a>
                </div>

                <div class="text-center p-t-136">
                    <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    کاربر تازه وارد هستید ؟ <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="txt2"> ایجاد اکانت جدید</a>
                </div>
            </form>
        </div>
    </div>
</div>