            </script>
        </div>*@

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">ثبت نام</button>
                    </div>


                    <div class="margin-top-10">
                        @*<label>
                رمز عبور خود را فراموش کرده اید؟ <a class="form--item" asp-controller="Account" asp-action="ForgotPassword">بازیابی کلمه عبور</a><br>
            </label>*@
                        <br>
                        <label>
                            قبلا ثبت نام کرده ابد؟ <a class="form--item" asp-controller="Account" asp-action="Login">ورود به سایت</a><br>
                        </label>
                    </div>
                </form>
            @*</div>*@
        </div>
    </div>
</div>
