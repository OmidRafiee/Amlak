@using Amlak.Core.ViewModel.House
@model List<Amlak.Core.ViewModel.House.HouseViewModel>

@{
    Layout = "_Layout";

}
<div class="PageMainContent ofh relative">
    
    @Html.Partial("_TopSlider")
    
    @Html.Partial("_Search")
    
    @Html.Partial("_SpecialOffer")

    <div class="LastOffers mtb20">
        <div class="LastOffersHeader radius3">
            <h2 class="LastOffersHeaderTitle tl lh3-5 h100p bold prl15 relative"><span class="LastOffersHeaderTitleBefore absolute after"></span>آخــــــــــرین املاک
            </h2>
        </div>
        <div class="LastOffersContent mt15">
            <div class="row prl5">

                @foreach (var item in Model)
                {
                    <div class="LastOffersContentCol col-md-4 col-sm-6 col-12 p10">
                        <a href="javascript:void(0)" class="OfferItem block sborder radius3 ofh p1">
                            <span class="OfferItemType tc">@item.Status</span>
                            <figure class="OfferItemPic w100p tc relative relative">
                                <img src="~/image/pic1.jpg" class="relativemv"/>
                                <figcaption class="absolute p5 w100p textcut tc">@item.Price ملیارد</figcaption>
                            </figure>
                            <div class="OfferItemTitle textcut bold p10">@item.Title</div>
                            <div class="OfferItemLocation textcut bold p10 relative before">فرمانیه</div>
                            <div class="OfferItemDetails row ptb10 w100p m0a">
                                <div class="OfferItemDetailsDiv col-3 tc bold"> زیربنا <br/>@item.Scale</div>
                                <div class="OfferItemDetailsDiv col-4 tc bold"> تعداد خواب <br/> @item.Rooms</div>
                                <div class="OfferItemDetailsDiv col-2 tc bold"> طبقه <br/>@item.Floor
                                </div>
                                <div class="OfferItemDetailsDiv col-3 tc bold"> پارکینگ <br/> @item.Parkings</div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>

    @Html.Partial("_MiddelSlider")
    @Html.Partial("_News")
    @Html.Partial("_Statistics")
</div>
