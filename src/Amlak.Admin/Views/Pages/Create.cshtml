@using Exir.Regate
@model Calabin.Core.ViewModel.Pages.PagesViewModel

@{ ViewBag.Title = "ساخت صفحه جدید"; }



    <form asp-controller="Pages" asp-action="Create" class="form-horizontal">  
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-sm-2 control-label">عنوان صفحه</div>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success green-jungle">ثبت اطلاعات</button>
                <a class="btn btn-default blue-dark" href="@Url.Action("Index", "Pages")">بازگشت</a>
            </div>
        </div>

    </form>
   

