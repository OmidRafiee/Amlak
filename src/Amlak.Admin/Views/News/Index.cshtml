@using DNTPersianUtils.Core
@using Exir.Regate
@model List<Amlak.Core.DTO.News.NewsDTO>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<p>
    <a href="@Url.Action("Create", "News")" class="btn btn-success">ایجاد خبر جدید</a>
</p>

<div class="form-control">
    <div class="panel-body">

        <div class="">
            <form class="form-inline" asp-controller="News" asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-4 col-sm-4 form-group">
                        <label>جستجو بر اساس عنوان</label>
                      <input name="Term" class="form-control">
                      </div>
                    </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-valigned">
                <thead>
                    <tr>
                         <th>عنوان</th>
                        <th width="200">تاریخ انتشار</th>
                        <th width="100">وضعیت خبر</th>
                        <th width="150">اقدامات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                          
                            <td>@item.Title</td>
                            <td>@item.PublishedDate.ToPersianDateTextify().ToPersianNumbers()</td>
                            <td>
                                @Html.Raw(RegateInteractiveBooleanState.Build(
                                         id: item.Id,
                                         value: item.IsPublished,
                                         url: Url.Action("SetIsPublished", "News"),
                                         iconTrue: "circle",
                                         iconFalse: "circle",
                                         titleTrue: "منتشر شده",
                                         titleFalse: "منتشر نشده"
                                     ));
                            </td>
                            <td>
                            
                                <a class="btn btn-sm btn-success" asp-controller="News" asp-action="Edit" asp-route-id="@item.Id">
                                    ویرایش
                                </a>

                                <a class="btn btn-sm btn-danger" asp-controller="News" asp-action="Delete" asp-route-id="@item.Id">
                                    حذف
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


    <div class="panel-body">
        @*@Html.Partial("_Pagination")*@
    </div>


