@using Amlak.Core.SSOT
@using Exir.Regate
@inject FileConfig FileConfig
@model Amlak.Core.ViewModel.News.NewsViewModel

@{ ViewBag.Title = "ایجاد خبر جدبد"; }


<script src="~/lib/ckeditor-4.6.2/ckeditor.js"></script>


@using (Html.BeginForm("Create", "News", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        <div class="col-sm-2 control-label">عنوان خبر</div>
        <div class="col-sm-10">
            <input type="text" asp-for="Title" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2 control-label">خلاصه خبر </div>
        <div class="col-sm-10">
            <input type="text" asp-for="Summary" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2 control-label">متن خبر </div>
        <div class="col-sm-10">
            @Html.Raw(RegateWysiwyg.Build("Body"))
        </div>
    </div>

    <input type="text" value="@FileConfig.PhysicalAddress">
    <div class="form-group">
        <div class="col-sm-2 control-label">انتخاب فایل </div>
        <div class="col-sm-10">
            @Html.Raw(RegateFile.Build("File"))
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-2 control-label">انتخاب تصویر </div>
        <div class="col-sm-10">
            @Html.Raw(RegateImage.Build("Image"))
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-2 control-label">وضعیت انتشار</div>
        <div class="form-group">
            <label><input type="radio" name="IsPublished" value="true"> نمایش</label>
            <label> <input type="radio" name="IsPublished"  value="false"> عدم نمایش</label>
        </div>
    </div>



    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success green-jungle">ثبت اطلاعات</button>
            <a class="btn btn-default blue-dark" href="@Url.Action("Index", "News")">بازگشت</a>
        </div>
    </div>

}