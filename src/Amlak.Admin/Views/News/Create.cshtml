@model Amlak.Core.ViewModel.News.NewsViewModel
@using Exir.Regate
@{
    ViewBag.Title = "اخبار";
}


<form asp-controller="News" asp-action="Create" class="form-horizontal">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="hpanel horange">
                <div class="size-15 panel-heading">
                    ورود اطلاعات خبر
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right state--required">عنوان خبر </label>
                        <div class="col-sm-9">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right">خلاصه خبر </label>
                        <div class="col-sm-9">
                            <input asp-for="Summary" class="form-control" />
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right">متن خبر </label>
                        <div class="col-sm-9">
                            <input asp-for="Body" class="form-control" />
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right">عکس </label>
                        <div class="col-sm-9">
                            @Html.Raw(RegateImage.Build("Image", null, isRequired: true))
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right">فایل </label>
                        <div class="col-sm-9">
                            @Html.Raw(RegateFile.Build("File", null, isRequired: true))
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right state--required">تاریخ انتشار </label>
                        <div class="col-sm-9">
                            @Html.Raw(RegatePersianDatePicker2.Build("PublishedDate", null, isRequired: true))
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label text-right">وضعیت خبر</label>
                        <div class="col-sm-7">
                            @Html.RadioButton("IsPublished", true, true)فعال
                            @Html.RadioButton("IsPublished", false)غیر فعال

                        </div>
                    </div>

                    <input class="btn w-xs btn-success pull-right m-b-lg" type="submit" value="ثبت اطلاعات" />
                </div>
            </div>
        </div>
    </div>
</form>

